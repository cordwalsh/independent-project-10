<h1>Update <%=@volunteer.name() %></h1>

<form action="/volunteers/<%= @volunteer.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <button type="submit">Rename volunteer</button>
  <input id="name" name="name" type="text">

</form>



<form action="/volunteers/<%= @volunteer.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete volunteer</button>
</form>

<p><a href="/volunteers">Return to volunteer list</a></p>
